<% if params[:action] == 'search' %>
    <div class="results-block">
        <%= bootstrap_flash %>
    </div>
<% end %>

<% if @stock %>
<div class="well results-block">
  <strong>Symbol: </strong><%= @stock.ticker %>
  <strong>Name: </strong><%= @stock.name %>
  <strong>Price: </strong><%= @stock.last_price %>
  <% if current_user.can_add_stock?(@stock.ticker) %>
    <%= link_to "Add to my stocks", user_stocks_path(user: current_user, stock_ticker: @stock.ticker),
                                  class: "btn btn-xs btn-success", method: :post %>
  <% else %>
    <span class="label label-default">
      You have already added
      <% if !current_user.under_stock_limit? && !current_user.stock_already_added?(@stock.ticker) %>
         the maximum of 10 stocks
      <% end %>
      <% if current_user.stock_already_added?(@stock.ticker) && current_user.under_stock_limit? %>
        this stock
      <% end %>
      <% if !current_user.under_stock_limit? && current_user.stock_already_added?(@stock.ticker) %>
        the maximum of 10 stocks and already have this stock added
      <% end %>
    </span>
  <% end %>
</div>
<% end %>